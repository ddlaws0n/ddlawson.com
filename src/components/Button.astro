---
import Icon from 'astro-icon';

export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {
  title: string;
  primary?: boolean;
  link: string;
  icon: string;
}

const { link, title, primary = true, icon, ...props } = Astro.props;

const primaryStyles =
  'border-primary-700 bg-primary-700 text-white hover:border-primary-800 hover:bg-primary-800 hover:text-white focus:outline-none focus:ring focus:ring-primary-500 focus:ring-opacity-50 active:border-primary-700 active:bg-primary-700';
const secondaryStyles =
  'border-slate-300 bg-white text-primary-700 shadow-sm hover:border-slate-300 hover:bg-slate-100 hover:text-slate-800 shadow-sm hover:shadow focus:outline-none focus:ring focus:ring-slate-500 focus:ring-opacity-25 active:border-white active:bg-white active:shadow-none dark:border-primary-600 dark:bg-primary-600 dark:hover:border-primary-700 dark:text-primary-100 dark:hover:bg-primary-700 dark:hover:text-white';
---

<a
  href={link}
  class:list={[
    'inline-flex items-center justify-center space-x-2 rounded border px-6 py-4 font-semibold leading-6',
    `${primary ? primaryStyles : secondaryStyles}`,
  ]}
  {...props}
>
  {icon && <Icon name={icon} class="h-5 w-5 opacity-50" />}
  <span>{title}</span>
</a>
